{
  "version": 2,
  "name": "journally",
  "public": true,
  "trailingSlash": false,
  "cleanUrls": true,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "headers": [
    {
      "source": "/html/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/html/index.html" },
    { "src": "^/about-us$", "dest": "/html/about-us.html" },
    { "src": "^/auth$", "dest": "/html/auth.html" },
    { "src": "^/create-post$", "dest": "/html/create-post.html" },
    { "src": "^/notification-center$", "dest": "/html/notification-center.html" },
    { "src": "^/posts$", "dest": "/html/posts.html" },
    { "src": "^/profile$", "dest": "/html/profile.html" },

    { "src": "^/html/(.*)", "dest": "/html/$1" },
    { "src": "^/javascript/(.*)", "dest": "/javascript/$1" },
    { "src": "^/css/(.*)", "dest": "/css/$1" },
    { "src": "^/assets/(.*)", "dest": "/assets/$1" },
    { "src": "^/libs/(.*)", "dest": "/libs/$1" },
    { "src": "^/components/(.*)", "dest": "/components/$1" }
  ]
}
