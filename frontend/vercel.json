{
  "version": 2,
  "public": true,
  "name": "frontend",
  "builds": [
    {
      "src": "frontend/html/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "frontend/html/index.html"
    },
    {
      "src": "/about-us",
      "dest": "frontend/html/about-us.html"
    },
    {
      "src": "/auth",
      "dest": "frontend/html/auth.html"
    },
    {
      "src": "/create-post",
      "dest": "frontend/html/create-post.html"
    },
    {
      "src": "/notification-center",
      "dest": "frontend/html/notification-center.html"
    },
    {
      "src": "/posts",
      "dest": "frontend/html/posts.html"
    },
    {
      "src": "/profile",
      "dest": "frontend/html/profile.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/html/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "status": 404,
      "dest": "frontend/html/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
