{
  "version": 2,
  "name": "journally",
  "public": true,
  "trailingSlash": false,
  "cleanUrls": true,
  "builds": [
    {
      "source": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "headers": [
    {
      "source": "/html/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "^/$", "destinationination": "/html/index.html" },
    { "source": "^/about-us$", "destinationination": "/html/about-us.html" },
    { "source": "^/auth$", "destination": "/html/auth.html" },
    { "source": "^/create-post$", "destination": "/html/create-post.html" },
    { "source": "^/notification-center$", "destination": "/html/notification-center.html" },
    { "source": "^/posts$", "destination": "/html/posts.html" },
    { "source": "^/profile$", "destination": "/html/profile.html" },
    { "source": "^/html/(.*)", "destination": "/html/$1" },
    { "source": "^/javascript/(.*)", "destination": "/javascript/$1" },
    { "source": "^/css/(.*)", "destination": "/css/$1" },
    { "source": "^/assets/(.*)", "destination": "/assets/$1" },
    { "source": "^/libs/(.*)", "destination": "/libs/$1" },
    { "source": "^/components/(.*)", "destination": "/components/$1" }
  ]
}
