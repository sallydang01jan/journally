{
  "version": 2,
  "name": "journally",
  "public": true,
  "trailingSlash": false,
  "cleanUrls": true,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "headers": [
    {
      "source": "/html/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/html/index.html" },
    { "source": "/about-us", "destination": "/html/about-us.html" },
    { "source": "/auth", "destination": "/html/auth.html" },
    { "source": "/create-post", "destination": "/html/create-post.html" },
    { "source": "/notification-center", "destination": "/html/notification-center.html" },
    { "source": "/posts", "destination": "/html/posts.html" },
    { "source": "/profile", "destination": "/html/profile.html" },
    { "source": "/html/:path*", "destination": "/html/:path*" },
    { "source": "/javascript/:path*", "destination": "/javascript/:path*" },
    { "source": "/css/:path*", "destination": "/css/:path*" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/libs/:path*", "destination": "/libs/:path*" },
    { "source": "/components/:path*", "destination": "/components/:path*" }
  ]

}
