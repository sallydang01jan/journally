{
  "version": 2,
  "public": true,
  "name": "frontend",
  "rewrites": [
    { "source": "/", "destination": "frontend/html/index.html" },
    { "source": "/about-us", "destination": "frontend/html/about-us.html" },
    { "source": "/auth", "destination": "frontend/html/auth.html" },
    { "source": "/create-post", "destination": "frontend/html/create-post.html" },
    { "source": "/notification-center", "destination": "frontend/html/notification-center.html" },
    { "source": "/posts", "destination": "frontend/html/posts.html" },
    { "source": "/profile", "destination": "frontend/html/profile.html" },
    { "source": "/(.*)", "destination": "frontend/html/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
